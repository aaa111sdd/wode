.container {

		width: 100%;
		height: calc(100vh - 70px);
		overflow: hidden;
}
.container scroll-view {
		height: 100%;
}
.fixbg {
		width: 100%;
		height: 100vh;
		position: fixed;
		left: 0;
		top: 0;
		background-image: url(https://p1.music.126.net/pcYHpMkdC69VVvWiynNklA==/109951166952713766.jpg);
		background-size: cover;
		background-position: center 0;
		filter: blur(10px);
		transform: scale(1.2);
}
